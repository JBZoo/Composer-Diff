{
    "name"         : "jbzoo/composer-diff",
    "type"         : "library",
    "description"  : "See what has changed after a composer update.",
    "keywords"     : ["composer", "php", "composer.lock", "composer.json", "diff", "composer diff", "composer-diff"],
    "license"      : "MIT",

    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        },
        {
            "name"     : "David Jonas",
            "homepage" : "https://github.com/davidrjonas",
            "role"     : "Original Idea"
        }
    ],

    "require"      : {
        "php"             : ">=7.4",
        "ext-json"        : "*",
        "ext-filter"      : "*",

        "jbzoo/data"      : "^4.3|^5.0|dev-master|7.x-dev",
        "jbzoo/markdown"  : "^1.1.0",
        "jbzoo/cli"       : "^1.0|^2.0",

        "symfony/console" : ">=4.4",
        "symfony/process" : "^4.4|^5.0",
        "composer/semver" : ">=1.0"
    },

    "require-dev"  : {
        "jbzoo/toolbox-dev"         : "^4.1.1",
        "roave/security-advisories" : "dev-master",
        "composer/composer"         : "^1.1|^2.0|^3.0"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\ComposerDiff\\" : "src"
        }
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "bin"          : ["composer-diff"],
    "config"       : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    }
}
