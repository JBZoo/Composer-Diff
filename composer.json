{
    "name"              : "jbzoo/composer-diff",
    "type"              : "library",
    "description"       : "See what has changed after a composer update.",

    "keywords"          : [
        "composer", "php", "composer.lock", "composer.json", "diff", "composer diff", "composer-diff"
    ],

    "license"           : "MIT",

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        },
        {
            "name"     : "David Jonas",
            "homepage" : "https://github.com/davidrjonas",
            "role"     : "Original Idea"
        }
    ],

    "bin"               : ["composer-diff"],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php"             : "^8.1",
        "ext-json"        : "*",
        "ext-filter"      : "*",

        "jbzoo/data"      : "7.x-dev",
        "jbzoo/markdown"  : "7.x-dev",
        "jbzoo/cli"       : "7.x-dev",

        "symfony/console" : ">=5.4",
        "symfony/process" : ">=5.4",
        "composer/semver" : ">=1.0"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev"         : "7.x-dev",
        "roave/security-advisories" : "dev-master",
        "composer/composer"         : ">=2.0"
    },

    "autoload"          : {
        "psr-4" : {"JBZoo\\ComposerDiff\\" : "src"}
    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true},
        "platform-check"      : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
