{
    "name"              : "jbzoo/composer-diff",
    "type"              : "library",
    "description"       : "See what has changed after a composer update.",
    "keywords"          : ["composer", "php", "composer.lock", "composer.json"],
    "license"           : "MIT",

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        },
        {
            "name"     : "David Jonas",
            "homepage" : "https://github.com/davidrjonas",
            "role"     : "Original Idea"
        }
    ],

    "require"           : {
        "php"             : ">=7.2",
        "ext-json"        : "*",
        "ext-filter"      : "*",

        "jbzoo/data"      : "4.0.x-dev",
        "jbzoo/utils"     : "4.0.x-dev",
        "symfony/console" : "^4.4||^5.0",
        "symfony/process" : "^4.4||^5.0",
        "composer/semver" : "^1.0||^2.0||^3.0"
    },

    "require-dev"       : {
        "jbzoo/phpunit"             : "4.0.x-dev",
        "jbzoo/codestyle"           : "2.0.x-dev",
        "jbzoo/composer-graph"      : "1.0.x-dev",
        "roave/security-advisories" : "dev-master"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\ComposerDiff\\" : "src"
        }
    },

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "bin"               : ["jbzoo-composer-diff"],
    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.0.x-dev"
        }
    }
}
